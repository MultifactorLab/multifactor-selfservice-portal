<?xml version="1.0" encoding="utf-8" ?>
<configuration>

	<Logging>
		<LogLevel>
			<Default>Information</Default>
			<Microsoft>Warning</Microsoft>
		</LogLevel>
	</Logging>
	<AllowedHosts>*</AllowedHosts>

	<PortalSettings>			
				
		<!--Company Name-->
		<CompanyName>ACME</CompanyName>

		<!--Active Directory Domain -->
		<CompanyDomain>domain.local</CompanyDomain>
			
		<!--Company Logo URL: absolute or relative -->
		<CompanyLogoUrl>/mfa/content/images/logo.svg</CompanyLogoUrl>			
		
		<!--ActiveDirectory 2FA group (optional) for SAML and OpenID Connect Single Sign On -->
		<!--<ActiveDirectory2faGroup>2FA Users</ActiveDirectory2faGroup>-->
			
		<!--Use ActiveDirectory User General properties phone number (optional)-->
		<!--<UseActiveDirectoryUserPhone>true</UseActiveDirectoryUserPhone>-->
			
		<!--Use ActiveDirectory User Telephones properties mobile number (optional)-->
		<!--<UseActiveDirectoryMobileUserPhone>true<UseActiveDirectoryMobileUserPhone/>-->

		<!--Multifactor API -->
		<MultifactorApiUrl>https://api.multifactor.ru</MultifactorApiUrl>
		<!-- get it from multifactor management panel -->
		<MultifactorApiKey>key</MultifactorApiKey>
		<!-- get it from multifactor management panel -->
		<MultifactorApiSecret>secret</MultifactorApiSecret>
		<!--HTTP proxy for API (optional)-->
		<!--<MultifactorApiProxy>http://proxy:3128</MultifactorApiProxy>-->

		<!-- minimal log level: 'Debug', 'Info', 'Warn', 'Error' -->
		<LoggingLevel>Info</LoggingLevel>
		<!--<LoggingFormat>json</LoggingFormat>-->

		<!--enable user password change-->
		<EnablePasswordManagement>true</EnablePasswordManagement>
		<!--enable user Exchange AciveSync devices provisioning-->
		<EnableExchangeActiveSyncDevicesManagement>false</EnableExchangeActiveSyncDevicesManagement>

		<!--Syslog server-->
		<!--<SyslogServer>tcp://192.168.56.1:514</SyslogServer>-->
		<!--Syslog format: RFC3164 or RFC5424-->
		<!--<SyslogFormat>RFC5424</SyslogFormat>-->
		<!--<SyslogFacility>Auth</SyslogFacility>-->
		<!--<SyslogAppName>multifactor-portal</SyslogAppName>-->

		<DefaultCulture>en</DefaultCulture>
	</PortalSettings>

</configuration>