<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("head", false)
    <title>@ViewBag.Title</title>
</head>
<body>
    <div id="wrapper">
        <header id="header">
            <strong class="logo">
                <img src="@Configuration.Current.LogoUrl" style="max-height:100px" />
            </strong>
            <h1>@ViewBag.Title</h1>
        </header>
        <main id="main">
            @RenderBody()
        </main>
        <footer id="footer">
            <em class="copyright">&copy; @Configuration.Current.CompanyName @DateTime.Now.Year</em>
        </footer>
    </div>
</body>
</html>
