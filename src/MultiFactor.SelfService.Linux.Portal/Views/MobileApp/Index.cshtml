@model MultiFactor.SelfService.Windows.Portal.Services.Token

@{
    ViewBag.Title = string.Format(Resources.Global.SiteName, Configuration.Current.CompanyName);
}

<div class="block">
    <div class="container">
        <div class="info">
            <p>@Resources.MobileApp.Header</p>

            <p>
                @Html.Raw(string.Format(Resources.MobileApp.Instruction, Model.Id))
            </p>

            <br />

            <div id="qrcode"></div>
            <br />
            <br />

            <ul class="action">
                <li><a href="~/" class="btn">@Resources.MobileApp.Ok</a></li>
            </ul>
        </div>

    </div>
</div>

<script type="text/javascript">
    new QRCode(document.getElementById("qrcode"), "multifactor://resolve?r=@Model.Id");
</script>

@section head
{
    <script src="~/Content/js/qrcode.min.js"></script>
}